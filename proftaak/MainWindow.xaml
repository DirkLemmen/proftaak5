<Window x:Class="proftaak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proftaak"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <ComboBox x:Name="cbPorts" Width="100" Height="20" SelectionChanged="cbPorts_SelectionChanged" >
            </ComboBox>
            <Slider Height="Auto" Width="250" x:Name="sldIntensity" Maximum="127" TickFrequency="1" ValueChanged="sldIntensity_ValueChanged"/>
            <Button x:Name="btnReset" Content="Reset" Width="75" Click="btnReset_Click"/>
        </StackPanel>
        
        
    </Grid>
</Window>
